---
import Section from "../Section.astro";
import { work } from "@cv";
---

<Section title="Experiencia profesional">
  <ul>
    {
      work.map(
        ({ name, startDate, endDate, position, summary, highlights, url }) => {
          const startYear = new Date(startDate).getFullYear();
          const endYear =
            endDate != null ? new Date(endDate).getFullYear() : "Actual";

          return (
            <li>
              <article>
                <header>
                  <div>
                    <h3>
                      <a href={url} title={`Ver ${name}`} target="_blank">
                        {name}
                      </a>
                      <span class="position">
                        {" "}
                        — {position} ({startYear}–{endYear})
                      </span>
                    </h3>
                  </div>
                </header>

                <footer>
                  {highlights && highlights.length > 0 && (
                    <ul class="highlights">
                      {highlights.map((highlight) => (
                        <li>{highlight}</li>
                      ))}
                    </ul>
                  )}
                </footer>
              </article>
            </li>
          );
        },
      )
    }
  </ul>
</Section>

<style>
  ul {
    display: flex;
    flex-direction: column;
    gap: 32px;
  }

  article h3 {
    font-weight: 500;
    color: #111;
  }

  article a {
    color: #111;
  }

  article a:hover {
    text-decoration: underline;
  }

  .position {
    color: #555;
    font-weight: 400;
    font-size: 0.9rem;
  }

  header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 4px;
  }

  footer {
    display: flex;
    flex-direction: column;
    gap: 8px;
  }

  .highlights {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 6px;
  }

  .highlights li {
    color: #666;
    font-size: 0.85rem;
    line-height: 1.4;
    padding-left: 16px;
    position: relative;
  }

  .highlights li::before {
    content: "•";
    position: absolute;
    left: 0;
    color: #999;
  }
</style>
